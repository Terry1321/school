/* pages/myInfo/myInfo.wxss */
.myHeadFrame{
    width: 100vw;
    height: 22vw;
}

.myNameFrame{
    width: 100vw;
    height: 11vw;
}

.myHead{
    margin: 0 3vw;
    height: 22vw;
    width: 94vw;
    background-color: #fff;
    display: block;
    border-bottom: 1rpx solid #e5e5e5;
    float: left;
    box-sizing: border-box;
}

.myHead .fHead{
    /* margin-left: 3vw; */
    font-size: 33rpx;
    line-height: 22vw;
    display: inline-block;
}

.myHead .pHead{
    position: relative;
    float: right;
    /* margin: 0 4vw; */
    top: 2vw;
    height: 18vw;
    width: 18vw;
    display: inline-block;
}

.myName{
    margin: 0 3vw;
    height: 11vw;
    width: 94vw;
    background-color: #fff;
    display: block;
    border-bottom: 1rpx solid #e5e5e5;
    float: left;
    box-sizing: border-box;
}

.myName .fName{
    font-size: 33rpx;
    line-height: 11vw;
    display: inline-block;
}

.myName .pName{
    float: right;
    font-size: 33rpx;
    line-height: 11vw;
    display: inline-block;
    color: #b4b4b4;
}

.myHead:active, .myName:active,.myHeadFrame:active, .myNameFrame:active{
    background-color: #f9f9f9;
    color: #555;
}